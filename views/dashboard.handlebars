{{#each posts as |post|}}
  <div class="card">
    <header class="card-header">
      <p class="card-header-title is-5">{{post.title}}
        <span class="card-header-title is-6" id="posted-by">Posted by
          {{post.user.username}}
          on
          {{post.created_at}}</span></p>
    </header>
    <div class="card-content">
      <p>{{post.contents}}</p>
    </div>
  </div>
{{/each}}
<button>Add New Post</button>