<div class="posts">
  {{#each posts as |post|}}
    <div class="card">
      <header class="card-header">
        <p class="card-header-title is-5">{{post.title}}
          <span class="card-header-title is-6" id="posted-by">Posted by
            {{post.user.username}}
            on
            {{format_date post.created_at}}</span></p>
      </header>
      <div class="card-content">
        <p>{{post.contents}}</p>
      </div>
    </div>
  {{/each}}
</div>

<form class="new-post-form">
  <div>
    <textarea class="textarea" placeholder="write blog post here"></textarea>
  </div>

  <div>
    <button class="button is-primary" type="submit">Add Blog Post</button>
  </div>
</form>