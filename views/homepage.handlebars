{{#each posts as |post|}}
  <div class="card">
    <header class="card-header">
      <p class="title is-5">{{post.title}}
        <span class="title is-6 has-text-right">Posted by
          {{post.user.username}}
          on
          {{post.created_at}}</span></p>
    </header>
    <div class="card-content">
      <p>{{post.contents}}</p>
    </div>
  </div>
{{/each}}